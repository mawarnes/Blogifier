@layout LoginLayout
@page "/admin/login"
@inject HttpClient Http
@inject NavigationManager _navigationManager
@inject IStringLocalizer<Resource> localizer
@{
    string youCanSignIn = localizer["you-can-sign-in"];
}

@if (showError)
{
    <div class="app-account-message bg-danger text-white rounded">@localizer["login-failed"].</div>
}

@if (model != null)
{
    <EditForm Model="@model" OnValidSubmit="LoginUser">
        <DataAnnotationsValidator />
        <div class="form-item">
            <label class="form-item-label">@localizer["email"]</label>
            <input class="form-control" type="email" @bind="model.Email" autofocus>
            <ValidationMessage For="@(() => model.Email)"></ValidationMessage>
        </div>
        <div class="form-item">
            <div class="d-flex">
                <label class="form-item-label">@localizer["password"]</label>
                @*<a class="ms-auto app-account-reset-link" href="/admin/reset" tabindex="-1">Forgot Password?</a>*@
            </div>
            <input class="form-control" type="password" @bind="model.Password">
            <ValidationMessage For="@(() => model.Password)"></ValidationMessage>
        </div>
        <div class="form-item">
            <button type="submit" class="btn btn-blogifier w-100">@localizer["login"]</button>
        </div>
    </EditForm>
}

