@using Blogifier.Shared.Resources
@using Blogifier.Shared
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> _localizer

<footer class="blog-footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <partial name="../widget/categories.cshtml" />
            </div>
            <div class="col-lg-4">
                <partial name="../widget/posts-popular.cshtml" />
            </div>
            <div class="col-lg-4">
                <partial name="../widget/newsletter.cshtml" />
            </div>
        </div>
    </div>

    <div class="blog-copyright">
        <div class="container d-flex">
            <p>
                © @DateTime.Now.Year -
                Powered by
                <a href="https://blogifier.net" data-toggle="tooltip" rel="nofollow" target="_blank"
                   title="Version - ">Blogifier</a>.
            </p>
            <div class="blog-adminbar ml-auto">
                @if (User.Identity.IsAuthenticated)
                {
                    <a href="~/admin">
                        <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-person-fill" fill="currentColor"
                             xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M3 14s-1 0-1-1 1-4 6-4 6 3 6 4-1 1-1 1H3zm5-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                        </svg>
                        @_localizer["admin"]
                    </a>
                    <a href="~/account/logout">
                        <svg class="bi bi-box-arrow-left" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor"
                             xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M4.354 11.354a.5.5 0 000-.708L1.707 8l2.647-2.646a.5.5 0 10-.708-.708l-3 3a.5.5 0 000 .708l3 3a.5.5 0 00.708 0z"
                                  clip-rule="evenodd"></path>
                            <path fill-rule="evenodd" d="M11.5 8a.5.5 0 00-.5-.5H2a.5.5 0 000 1h9a.5.5 0 00.5-.5z"
                                  clip-rule="evenodd"></path>
                            <path fill-rule="evenodd"
                                  d="M14 13.5a1.5 1.5 0 001.5-1.5V4A1.5 1.5 0 0014 2.5H7A1.5 1.5 0 005.5 4v1.5a.5.5 0 001 0V4a.5.5 0 01.5-.5h7a.5.5 0 01.5.5v8a.5.5 0 01-.5.5H7a.5.5 0 01-.5-.5v-1.5a.5.5 0 00-1 0V12A1.5 1.5 0 007 13.5h7z"
                                  clip-rule="evenodd"></path>
                        </svg>
                        @_localizer["sign-out"]
                    </a>
                }
                else
                {
                    <a href="~/account/login">
                        <svg width="1em" height="1em" viewBox="0 0 16 16"
                             class="bi bi-box-arrow-in-right" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd"
                                  d="M6 3.5a.5.5 0 0 1 .5-.5h8a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-8a.5.5 0 0 1-.5-.5v-2a.5.5 0 0 0-1 0v2A1.5 1.5 0 0 0 6.5 14h8a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-8A1.5 1.5 0 0 0 5 3.5v2a.5.5 0 0 0 1 0v-2z" />
                            <path fill-rule="evenodd"
                                  d="M11.854 8.354a.5.5 0 0 0 0-.708l-3-3a.5.5 0 1 0-.708.708L10.293 7.5H1.5a.5.5 0 0 0 0 1h8.793l-2.147 2.146a.5.5 0 0 0 .708.708l3-3z" />
                        </svg>
                        @_localizer["login"]
                    </a>
                }
            </div>
        </div>
    </div>
</footer>
